<!DOCTYPE html>
<html>
  <head>
    <title>Spaceshare</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3" href="/">SpaceShare</a>
          <ul class="navbar-nav ml-auto">
            <% if host_signed_in? %>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_host_session_path, method: :delete, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              予約一覧
              <%#= link_to 'スペース一覧', host_spaces_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to '新規スペース登録', new_host_space_path, class: 'nav-link text-dark' %>
            </li>
            <% elsif guest_signed_in? %>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_guest_session_path, method: :delete, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to 'スペース一覧', guest_spaces_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to '予約一覧', guest_reservations_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to 'マイページ', guests_path, class: 'nav-link text-dark' %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to "ゲストログイン", new_guest_session_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "ホストログイン", new_host_session_path, class: 'nav-link text-dark' %>
            </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
