<%= form_with model: @reservation, url: guest_space_confirm_path(@space.id), local: true do |f| %>
  <%= f.label "利用人数" %>
  <%= f.select :people, *[1..@space.capacity]%>
  <br>
  <%= f.label "利用日" %>
  <%= f.date_select :use_date, start_year: Time.now.year, use_month_numbers: true,  start_hour: @space.open_time.hour, end_hour: @space.close_time.hour, minute_step: 30 %>
  <br>
  <%= f.label "利用開始時刻" %>
  <%= f.time_select :start_time, start_hour: @space.open_time.hour, end_hour: @space.close_time.hour, minute_step: 30 %>
  <br>
  <%= f.label "利用終了時刻" %>
  <%= f.time_select :end_time,start_hour: @space.open_time.hour, end_hour: @space.close_time.hour, minute_step: 30 %>
  <br>
  <%= f.submit '確認画面へ' %>
<% end %>
