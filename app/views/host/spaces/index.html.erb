<div class="container">
  <h4>【管理スペース一覧】</h4>
  <br>
  <% @spaces.each do |space| %>
      <div class="card mb-3" style="max-width: 720px;">
        <div class="row no-gutters">
          <div class="col-md-7 m-auto text-center">
            <%= attachment_image_tag space, :image, :fill, 320, 240 %>
          </div>
          <div class="col-md-5">
            <div class="card-body">
              <h4 class="card-title font-weight-bold"><%= space.name %></h4>
              <p class="card-text">
                <i class="fas fa-users"></i>
                1 ~ <%= space.capacity %>名
              </p>
              <p class="card-text"><i class="fas fa-coins"></i> <%= space.hourly_rate.to_s(:delimited) %>円 / 時間</p>
              <p class="card-text">
                <i class="fas fa-clock"></i>
                <%= space.open_time.strftime("%H:%M") %>　〜　<%= space.close_time.strftime("%H:%M") %>
              </p>
              <p class="card-text">
              <i class="fas fa-map-marker-alt"></i>
              <%= space.address %>
              </p>
              <p class="card-text">
                <%= link_to "詳細を見る", host_space_path(space.id), class:'btn btn-sm btn-primary'  %>
                <%= link_to "予約一覧", host_space_reservations_path(space.id), class:'btn btn-sm btn-success' %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>