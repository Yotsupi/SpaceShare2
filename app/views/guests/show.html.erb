<div class="container">
  <h4 class="ml-5">マイページ</h4>

  <div class="row mt-3">
  <table class="table table-bordered">
    <tr>
      <th class="table-active">氏名</th>
      <td><%= @guest.last_name %>　<%= @guest.first_name %></td>
    </tr>
    <tr>
      <th class="table-active">カナ</th>
      <td><%= @guest.last_name_kana %>　<%= @guest.first_name_kana %></td>
    </tr>
    <tr>
      <th class="table-active">郵便番号</th>
      <td><%= @guest.postal_code %></td>
    </tr>
    <tr>
      <th class="table-active">住所</th>
      <td><%= @guest.address %></td>
    </tr>
    <tr>
      <th class="table-active">電話番号</th>
      <td><%= @guest.telephone_number %></td>
    </tr>
    <tr>
      <th class="table-active">メールアドレス</th>
      <td><%= @guest.email %></td>
    </tr>
  </table>
  </div>
  <div class="text-right">
    <%= link_to "編集する" , edit_guests_path, class: "btn btn-sm btn-success" %>
  </div>

</div>