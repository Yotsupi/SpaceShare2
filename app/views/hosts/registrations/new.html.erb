<div class="container">
  <div class="row">
    <h4>ホスト新規登録</h4>
  </div>

  <%= form_with model: @host, url: host_registration_path, local: true do |f| %>
    <%= render "hosts/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label "名前" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label "電話番号" %><br />
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
    </div>


    <div class="field">
      <%= f.label "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label "パスワード" %>(<%= @minimum_password_length %>文字以上)<br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label "パスワード(確認用)" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <br />
    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>

  <br>

  <div class="row">
    <h4>既にホストの方</h4>
  </div>
  <br>
  <div class="row">
    <div class="col-8">
      <%= link_to "こちら", new_host_session_path %>からログインしてください。
    </div>
  </div>

</div>